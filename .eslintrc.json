{
  "parser": "babel-eslint",
  "plugins": [
    "ava"
  ],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "rules": {
    "ava/no-ignored-test-files": ["error", {
      "files": [
        "test/**/*.js"
      ]
    }],
    "operator-linebreak": ["error", "after", {
      "overrides": {
        "+": "ignore",
        "?": "before",
        ":": "before"
      }
    }]
  }
}
